<h1> New Party </h1>

<%= form_for @party do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %>

    <%= f.date_field :date %><br>

    <%= f.label :category %>
    <%= f.text_field :category_name %>

    <%= f.radio_button :private, true %>
    <%= f.label :private %><br>
    <%= f.radio_button :private, false %>
    <%= f.label :public %><br>
    <%= f.fields_for :parties_supplies do |s| %>
        <%= s.fields_for :supply do |t|  %>
            <%= t.label :name, 'Add new supply:' %>
            <%= t.text_field :name %>

        <%end%>
        <%= s.collection_select :supply_id, Supply.all, :id, :name,  prompt: true%>
        <%= s.label :quantity %>
        <%= s.text_field :quantity %><br>
        
    <% end %>
    <%= f.submit %>
<% end %>
